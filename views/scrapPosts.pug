                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/addPosts' onclick='login()') Write  
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/postsList' onclick='login()') Posts
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/scrapsList' onclick='login()') Cart
        



section.masthead.text-center
    .container
        .row
            .col-md-9(style='margin-top:20%;')
                form(action="scrapPosts" method="post" style='margin-left:35%;border-radius:10px;width:70%;background-color:rgba(255, 255, 255, 0.7)')
                    table.table.table-list-search
                        tr
                            th 번호
                            td
                                input(type="text" name="id" value=`${scrapPosts.id}` readonly style='padding:5px;border-radius:5px; border:0;')
                        tr
                            th 이미지
                            td
                                input(type="text" name="img" value=`${scrapPosts.img}` readonly style='padding:5px;border-radius:5px; border:0;')
                        tr
                            th 제목
                            td
                                input(type="text" name="title" value=`${scrapPosts.title}` readonly style='padding:5px;border-radius:5px; border:0;')
                        tr
                            th 가격
                            td
                                input(type="text" name="price" value=`${scrapPosts.price} ETH` readonly style='padding:5px;border-radius:5px; border:0;')
                        tr
                            th 내용
                            td
                                input(type="text" name="content" value=`${scrapPosts.content}` readonly style='padding:5px;border-radius:5px; border:0;')
                        tr
                            th 작성자
                            td
                                input(type="text" name="nick" value=`${scrapPosts.nick}` readonly)
                        tr
                            th 조회수
                            td
                                input(type="text" name="hit" value=`${scrapPosts.hit}` readonly)
                    button.btn.btn-primary(type='submit' style='margin-bottom:20px') Cart