                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/profile') MyPage    
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/auth/logout') Logout
                else
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/addPosts' onclick='login()') Write  
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/postsList' onclick='login()') Posts
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='/scrapsList' onclick='login()') Cart      
body
    //- Header
    header.masthead
        .container.d-flex.h-100.align-items-center
            .mx-auto.text-center
                h1(style='margin-bottom:30px') MondifyPost
                form(action="updatePosts" method="post")
                    table(border=0.5 style='background-color:rgba(255, 255, 255, 0.7);border-radius:10px;align-items:center;margin:auto;')
                        tr
                            th(style='padding:20px') 번호
                            td
                                input(type="text" name="id" value=`${updatePosts.id}` readonly style='border-radius:10px;border:0;padding:10px;margin-left:10px;margin-right:10px;margin-bottom:20px;margin-top:15px')
                        tr
                            th 제목
                            td
                                input(type="text" name="title" value=`${updatePosts.title}` style='border-radius:10px;border:0;padding:10px;margin-left:10px;margin-right:10px;margin-bottom:20px;margin-top:15px')
                        tr
                            th 가격
                            td
                                input(type="text" name="price" style='border-radius:10px;border:0;padding:10px;margin-left:10px;margin-right:10px;')
                        tr
                            th 내용
                            td
                                textarea(rows="5" cols="50" name="content" value=`${updatePosts.content}` style='border-radius:10px;border:0;padding:10px;margin-left:10px;margin-right:10px;margin-bottom:20px;margin-top:15px')
                    button(style="font-weight:10;margin-top:10px;margin-right:10px;background-color:rgba(85, 85, 85, 0.8);border:0;border-radius:10px; padding:10px;padding-left: 20px;padding-right: 20px;color:white;") Edit